<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >  
<mapper namespace="com.wayblink.Dao.MessageMapper"> 
	<resultMap id="NewMessageResultMap" type="com.wayblink.entity.Message">  
        <id column="id" property="id" jdbcType="INTEGER" />  
        <result column="content" property="content" jdbcType="VARCHAR" />  
    </resultMap>  
    
    <select id="get" resultMap="NewMessageResultMap">
    	select id,content from message where id=#{id} 
    </select>
    
    <insert id="add">
    	insert into message(content) values (#{content})
    </insert>
    
    <update id="update">
    	update message set content = #{1} where id = #{0}
    </update>
    
    <delete id="delete">
    	delete from message where id = #{id}
    </delete>
    
</mapper>